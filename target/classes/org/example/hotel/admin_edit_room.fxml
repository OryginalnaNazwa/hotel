<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotel.AdminEditRoomController">
    <children>
        <VBox alignment="TOP_CENTER" layoutY="14.0" prefHeight="400.0" prefWidth="600.0" spacing="20.0">
            <children>
                <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="600.0" spacing="20.0">
                    <children>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                            <children>
                                <Label fx:id="idLabel" text="ID" />
                                <TextField fx:id="idValue" />
                            </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                            <children>
                                <Label fx:id="numberLabel" text="Number" />
                                <TextField fx:id="numberValue" />
                            </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                            <children>
                                <Label fx:id="floorLabel" text="Floor" />
                                <TextField fx:id="floorValue" />
                            </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                            <children>
                                <Label fx:id="premiumLabel" text="Premium" />
                                <CheckBox fx:id="premiumValue" mnemonicParsing="false" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="600.0" spacing="20.0">
                    <children>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                            <children>
                                <Label fx:id="bedsLabel" text="Beds" />
                                <TextField fx:id="bedsValue" />
                            </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                            <children>
                                <Label fx:id="priceLabel" text="Price" />
                                <TextField fx:id="priceValue" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Label fx:id="errorLabel" text="" textFill="RED" />
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="saveButton" onAction="#onSaveClick" text="Save" />
                        <Button  fx:id="abortButton" onAction="#onAbortClick" text="Abort" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>