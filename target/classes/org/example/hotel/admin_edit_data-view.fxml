<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="418.0" prefWidth="761.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotel.AdminEditDataController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Hotel Systems" />
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
      <children>
         <VBox alignment="CENTER" prefHeight="170.0" prefWidth="232.0" spacing="20.0">
            <children>
               <Label text="Hotel name" fx:id="hotelName" />
                <Label text="Hotel address" fx:id="hotelAddress" />
                <Label text="Stars" fx:id="hotelStars" />
               <Label text="Floors" fx:id="hotelFloors"/>
               <Label text="Default multiplier for premium rooms" fx:id="hotelPremium"/>
            </children>
         </VBox>
         <VBox alignment="CENTER" prefHeight="170.0" prefWidth="305.0" spacing="10.0">
            <children>
                <TextField fx:id="hotelNameValue" onKeyTyped="#HasValueChanged_Name" />
               <TextField fx:id="hotelAddressValue" onKeyTyped="#HasValueChanged_Address" />
               <Spinner fx:id="hotelStarsValue" editable="true" onMouseClicked="#HasValueChanged_Stars" />
               <Spinner fx:id="hotelFloorsValue" editable="true" onMouseDragged="#HasValueChanged_Floors" />
               <TextField fx:id="hotelMultiplierValue" onKeyTyped="#HasValueChanged_Multiplier" />
            </children>
         </VBox>
      </children>
   </HBox>
    <HBox alignment="CENTER" prefHeight="47.0" prefWidth="286.0" spacing="20.0">
        <children>
            <Button mnemonicParsing="false" onAction="#onSaveHotelDataButtonClick" text="Save" fx:id="saveButton" />
            <Button mnemonicParsing="false" onAction="#onAbortHotelDataButtonClick" text="Abort" fx:id="abortButton"/>
        </children></HBox>
</VBox>
