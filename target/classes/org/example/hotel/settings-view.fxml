<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotel.SettingsController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="-1.0" layoutY="-3.0" prefHeight="152.0" prefWidth="600.0">
         <children>
            <Label fx:id="settingsLabel" text="Settings" />
            <HBox alignment="CENTER_LEFT" prefHeight="83.0" prefWidth="600.0" spacing="20.0">
               <children>
                  <Label fx:id="languageLabel" text="Language" />
                   <ChoiceBox fx:id="languageChoice">
                       <items>
                           <FXCollections fx:factory="observableArrayList">
                               <String fx:value="English" />
                               <String fx:value="Polski" />
                           </FXCollections>
                       </items>
                   </ChoiceBox>
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets top="5.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER" layoutX="4.0" layoutY="330.0" prefHeight="57.0" prefWidth="585.0" spacing="20.0">
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveButtonClick" text="Save" />
            <Button fx:id="rejectButton" mnemonicParsing="false" onAction="#onRejectButtonClick" text="Abort" />
         </children>
      </HBox>
   </children>
</AnchorPane>
