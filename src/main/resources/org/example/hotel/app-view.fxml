<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="269.0" prefWidth="325.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotel.AppController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Hotel Systems" />
   <Label fx:id="systemText" text="Please log in to access the application" />
    <TextField fx:id="usernameArea" promptText="Login" />
   <PasswordField fx:id="passwordArea" onKeyPressed="#isEnter" promptText="Password" />
    <Button fx:id="loginButton" onAction="#onLoginButtonClick" text="Login" />
</VBox>
