<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotel.AdminEditUserController">
    <children>
        <VBox alignment="TOP_CENTER" layoutY="14.0" prefHeight="500.0" prefWidth="600.0" spacing="20.0">
            <children>
                <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="600.0" spacing="20.0">
                    <children>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="150.0" spacing="5.0">
                            <children>
                                <Label fx:id="usernameLabel" text="Username" />
                                <TextField fx:id="usernameValue" />
                            </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="150.0" spacing="5.0">
                            <children>
                                <Label fx:id="passwordLabel" text="Password" />
                                <TextField fx:id="passwordValue" />
                            </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                            <children>
                                <Label fx:id="adminLabel" text="Admin" />
                                <CheckBox fx:id="adminValue" mnemonicParsing="false" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="600.0" spacing="20.0">
                    <children>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="150.0" spacing="5.0">
                            <children>
                                <Label fx:id="nameLabel" text="Name" />
                                <TextField fx:id="nameValue" />
                            </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="150.0" spacing="5.0">
                            <children>
                                <Label fx:id="lastNameLabel" text="Last Name" />
                                <TextField fx:id="lastNameValue" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="600.0" spacing="20.0">
                    <children>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="150.0" spacing="5.0">
                            <children>
                                <Label fx:id="emailLabel" text="Email" />
                                <TextField fx:id="emailValue" />
                            </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="150.0" spacing="5.0">
                            <children>
                                <Label fx:id="phoneLabel" text="Phone" />
                                <TextField fx:id="phoneValue" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Label fx:id="errorLabel" text="" textFill="RED" />
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="saveButton" onAction="#onSaveClick" text="Save" />
                        <Button fx:id="abortButton" onAction="#onAbortClick" text="Abort" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>